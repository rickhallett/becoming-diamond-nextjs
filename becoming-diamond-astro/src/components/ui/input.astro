---
interface Props {
  type?: string;
  id?: string;
  name?: string;
  placeholder?: string;
  required?: boolean;
  className?: string;
  value?: string;
}

const {
  type = "text",
  id,
  name,
  placeholder,
  required = false,
  className = "",
  value = ""
} = Astro.props;
---

<input
  type={type}
  id={id}
  name={name}
  placeholder={placeholder}
  required={required}
  value={value}
  class={`
    w-full px-4 py-3 rounded-lg
    bg-white/5
    border border-white/10
    text-white placeholder-gray-500
    focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent
    transition-all duration-200
    ${className}
  `.trim()}
/>
