---
import Layout from '../layouts/Layout.astro';
---

<Layout title="App - Aceternity AI">
  <main class="min-h-screen bg-black text-white flex items-center justify-center px-4">
    <div class="text-center max-w-2xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Welcome to the App
      </h1>
      <p class="text-lg text-gray-400 mb-8">
        You've successfully authenticated. This page will be enhanced in future phases.
      </p>
      <a
        href="/landing"
        class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-medium py-3 px-6 rounded-lg transition-colors"
      >
        Back to Landing
      </a>
    </div>
  </main>
</Layout>
